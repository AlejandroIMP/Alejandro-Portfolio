---
interface Props {
  img: string;
  title: string;
  description: string;
  tags: string[];
  link: string;
  github: string;
}

const { img, title, description, tags, link, github } = Astro.props;
---

<article>
  <figure>
    <img src={img} alt={title} />
    <figcaption>{title}</figcaption>
  </figure>
  <ul>
    {tags.map((tag: string) => <li>{tag}</li>)}
  </ul>
  <p>{description}</p>
  <div>
    <a href={link}>Live</a>
    <a href={github}>Github</a>
  </div>
</article>
