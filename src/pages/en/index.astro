---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";
import HeaderHome from "../../components/Home/HeaderHome.astro";
import AboutMe from "../../components/Home/AboutMe.astro";
import Projects from "../../components/Home/Projects.astro";
import Technologies from "../../components/Home/Technologies.astro";
import Contact from "../../components/Home/Contact";
import { getLangFromUrl } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);

export const prerender = true;
---

<Layout title="Alejandro Sunuc">
  <HeaderHome />
  <main class="px-4 md:px-32 lg:px-72 text-center flex flex-col gap-20">
  <AboutMe />
  <Projects />
  <Technologies />
  <Contact 
    client:load
    lang={lang}
  />
  </main>
  <style>
    .text-gradient {21
      color: #171212;
    }

    .gradient {
      background-image: linear-gradient(
        92deg,
        #6a68d9 10%,
        #da6cae 60%,
        #f5a957
      );
      -webkit-text-fill-color: #0000;
      -webkit-background-clip: text;
    }
  </style>
</Layout>
